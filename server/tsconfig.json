{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES6",
    "module": "ES6",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "lib": [
      "es2015",
      "dom",
      "es2015.collection",
      "es2015.iterable",
      "dom.iterable"
    ],
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types"],
    "types": ["jquery", "jqueryui", "node"],
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build"],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./node_modules/@types/**/*.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
